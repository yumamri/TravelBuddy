<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_blue_bg">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:textSize="25sp"
        android:gravity="center"
        android:text="@string/dialog_document_header"
        android:background="@color/white"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="15sp"
        android:gravity="center"
        android:text="@string/dialog_document_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/dialog_document_name"
            android:layout_width="300dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:layout_height="50dp"
            android:textSize="15sp"
            android:gravity="center"
            android:background="@color/white" />

        <ImageButton
            android:id="@+id/dialog_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/variant_blue"
            app:srcCompat="@drawable/ic_add" />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="15sp"
        android:gravity="center"
        android:text="@string/dialog_document_category" />
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp" />

</LinearLayout>